{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"command": "hugo",
	"args": [
		"-w",
		"server"
	],
	"isBackground": true,
	"problemMatcher": [
		{
			"fileLocation": ["relative", "${workspaceRoot}/themes/hugo-theme-html5/layouts/"],
			"severity": "error",
			"pattern": {
				"regexp": "^ERROR: .* template: theme/(.*):([0-9]+):([0-9]+): executing .* at (.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"message": 4
			}
		}
	],
	"tasks": [
		{
			"label": "hugo",
			"type": "shell",
			"command": "hugo",
			"args": [
				"-w",
				"server"
			],
			"isBackground": true,
			"problemMatcher": [
				{
					"fileLocation": [
						"relative",
						"${workspaceRoot}/themes/hugo-theme-html5/layouts/"
					],
					"severity": "error",
					"pattern": {
						"regexp": "^ERROR: .* template: theme/(.*):([0-9]+):([0-9]+): executing .* at (.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				}
			],
			"group": {
				"_id": "build",
				"isDefault": false
			}
		}
	]
}
